<prism:PrismApplication
    x:Class="EniverseClient.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:EniverseClient"
    xmlns:prism="http://prismlibrary.com/">
    <Application.Resources>
        <Style x:Key="CustomTextBlockStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0 0 8 0"/>
        </Style>

        <Style x:Key="CustomLabelStyle" TargetType="{x:Type Label}">
            <Setter Property="FontFamily" Value="Verdana"/>
        </Style>
        
        <Style x:Key="CustomBorderStyle" TargetType="{x:Type Border}">
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="0" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        
    </Application.Resources>
</prism:PrismApplication>
